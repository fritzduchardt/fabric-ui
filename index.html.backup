<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Chat UI</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body, html { height:100%; margin:0; }
    #chat-container { display:flex; flex-direction:column; height:100%; }
    #messages { flex:1; overflow-y:auto; padding:1rem; background:#fff; }
    .message { margin-bottom:.75rem; display:flex; }
    .message.user { justify-content:flex-end; }
    .message.bot { justify-content:flex-start; }
    .bubble { padding:.5rem 1rem; border-radius:1rem; max-width:75%; }
    .message.user .bubble { background:#0d6efd; color:#fff; }
    .message.bot .bubble { background:#e9ecef; color:#000; }
  </style>
</head>
<body>
  <div id="chat-container" class="container-fluid d-flex flex-column">
    <header class="py-2 text-center border-bottom"><h5>Chat with API</h5></header>
    <div id="messages"></div>
    <form id="chat-form" class="d-flex flex-wrap align-items-center p-2" autocomplete="off">
      <select id="pattern-input" class="form-select me-2 mb-2" style="max-width:200px;">
        <option>Loading patterns...</option>
      </select>
      <select id="model-select" class="form-select me-2 mb-2" style="max-width:200px;">
        <option>Loading models...</option>
      </select>
      <select id="obsidian-select" class="form-select me-2 mb-2" style="max-width:300px;">
        <option>Loading files...</option>
      </select>
      <input id="user-input" class="form-control me-2 mb-2 flex-grow-1" type="text" placeholder="Type a message" required>
      <button class="btn btn-primary mb-2">Send</button>
    </form>
  </div>
  <script src="app.js"></script>
</body>
</html>

